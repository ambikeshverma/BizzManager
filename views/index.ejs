    <script>
if ('serviceWorker' in navigator && 'PushManager' in window) {
  navigator.serviceWorker.register('/sw.js').then(async function (register) {
    console.log('‚úÖ Service Worker registered.');

    if (Notification.permission === "granted") {
      // Already allowed
      subscribeUser(register);
    } else if (Notification.permission === "default") {
      // Ask user
      const permission = await Notification.requestPermission();
      if (permission === "granted") {
        subscribeUser(register);
      } else {
        console.log("‚ùå Notification permission denied.");
      }
    } else {
      console.log("üö´ Permission previously denied.");
    }

    async function subscribeUser(register) {
      const subscription = await register.pushManager.subscribe({
        userVisibleOnly: true,
        applicationServerKey: urlBase64ToUint8Array("BH8Am4taHfPDONGhl8kh5cQ1AmNYRVL-D-aWiIMdMJbBWyg6IYTtsERyL4mToEIvOvwW60GwFl2ftcOFQVgqtYw")
      });

      console.log("üì¶ Subscription object:", subscription);

      await fetch("/subscribe", {
        method: "POST",
        body: JSON.stringify(subscription),
        headers: { "Content-Type": "application/json" }
      });

      console.log("‚úÖ Subscription sent to backend");
    }

    function urlBase64ToUint8Array(base64String) {
      const padding = '='.repeat((4 - base64String.length % 4) % 4);
      const base64 = (base64String + padding).replace(/\-/g, '+').replace(/_/g, '/');
      const rawData = window.atob(base64);
      const outputArray = new Uint8Array(rawData.length);
      for (let i = 0; i < rawData.length; ++i) {
        outputArray[i] = rawData.charCodeAt(i);
      }
      return outputArray;
    }
  });
}
